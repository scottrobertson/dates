.page-header
  %h2
    = link_to 'Dates to Remember', root_path
    > #{@date.title.presence || @date.id}

= simple_form_for @date, html: { class: 'well' }, url: date_path(@date) do |f|
  = f.input :title
  = f.input :category, collection: DateToRemember.categories, include_blank: false
  = f.input :date, as: :date, html5: true
  = f.input :end_date, as: :date, html5: true
  = f.button :submit, value: 'Update'
  = link_to 'Delete', date_path(@date), class: 'btn btn-danger', method: :delete
